rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
	function owner(r) {
      return request.auth.uid != null && r.data.userId == request.auth.uid;
	}

    match /clients/{client} {
      allow create: if owner(request.resource);
      allow read, write, delete: if owner(resource);
    }
    match /tasks/{client} {
      allow create: if owner(request.resource);
      allow read, write, delete: if owner(resource);
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
